<div class="container">
  <ul class="nav nav-tabs margin-top-20">
    <li class="nav-item">
      <%= link_to "Article List", admin_articles_path, class: "nav-link "%>
    </li>
    <li class="nav-item">
      <%= link_to "Category List", admin_categories_path, class: "nav-link active"%>
    </li>
    <li class="nav-item">
      <%= link_to "User List" , admin_users_path, class: "nav-link" %>
    </li>
  </ul>


  <div class="row">

    <div class="col-md-12">
      <div class="form-inline" >
        <%= form_for [:admin, @category] do |f| %>
          <div class="form-group">
            <%= f.text_field :name, placeholder: "Category Name",  class: "form-control" %>
          </div>
          <%= f.submit class: "btn btn-primary" %>
        <% end %>
      </div>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>#</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <th scope="row"><%= category.id %></th>
            <td><%= category.name %></td>
            <td>
              <%= link_to 'Edit', admin_categories_path(id: category.id) %>
              <%= link_to 'Delete', admin_category_path(category), method: :delete, data: { confirm: "Are you sure?"} %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>
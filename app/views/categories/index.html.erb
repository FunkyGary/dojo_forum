<div class="container">
  <div>
    <%= link_to 'Articles', articles_path %> |
    <%= link_to 'Categories', categories_path %>
  </div>

  <h1>文章分類總表</h1>

  <div class="row">

    <div class="col-md-12">

      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>#</th>
            <th>Category Name</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <th scope="row"><%= category.id %></th>
            <td><%= category.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>

  </div>
</div>
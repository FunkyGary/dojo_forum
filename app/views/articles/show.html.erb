<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1><%= @article.title %></h1>
    </div>

    <div class="col-md-4">
      <%= image_tag @article.image.url, class: "img-responsive center-block" %>
      <br>
      <div class="well">
        <ul class="list-unstyled">
          <li><strong>Opening Hour:</strong></li>
          <li><strong>Tel:</strong></li>
          <li><strong>Address:</strong></li>
        </ul>
      </div>
    </div>
    <div class="col-md-8">
      <%= simple_format @article.description %>
    </div>

    <div class="clearfix"></div>

    <hr>
    <%= link_to 'Back to index', root_path %>
  </div>
</div>




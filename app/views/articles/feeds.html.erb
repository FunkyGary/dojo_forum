<div class="container">
  <div class="row">

    <!-- 使用 Bootstrap components 的 Nav Tabs -->
    <!-- https://getbootstrap.com/docs/3.3/components/#nav-tabs -->
    <ul class="nav nav-tabs">
      <li role="presentation">
        <%= link_to '首頁', root_path %>
      </li>
      <li role="presentation" class="active">
        <%= link_to '最新動態', feeds_articles_path %>
      </li>
    </ul>

  </div>
</div>

<br>

<div class="container">
  <div class="row">

    <div class="col-md-10 col-md-offset-1">
      <h1>最新動態</h1>
      <hr>
      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">最新文章</div>
          <div class="panel-body">
            <% @recent_articles.each do |article| %>
              <div>
                <h4>
                  <%= link_to article.title, article_path(article) %>
                  <small><%= article.category.name %></small>
                </h4>
                <p><%= truncate(article.description, length: 80) %></p>
                <hr>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="panel panel-default">
          <div class="panel-heading">最新評論</div>
          <div class="panel-body">
            <% @recent_comments.each do |comment| %>
              <div>
                <h4>
                  <%= link_to comment.article.title, article_path(comment.article) %>
                </h4>
                <p><%= truncate(comment.content, length: 80) %><small > - by <%= link_to comment.user.name, user_path(comment.user) %></small></p>
                <hr>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
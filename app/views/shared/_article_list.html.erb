  <div class="col-md-12">
      <br>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th class="text-center"><%= sort_link @q, :replies_count%></th>
            <th class="text-center"><%= sort_link @q, :title %></th>
            <th class="text-center"><%= sort_link @q, :updated_at %></th>
            <th class="text-center"><%= sort_link @q, :viewed_count %></th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
          <tr>
            <td><%= article.comments.size %></td>
            <td> 
              <%= link_to article_path(article) do %><%= article.title %><% end %>
            </td>
            <td><%= article.updated_at %></td>
            <td>
              <%= article.viewed_count %>
              <% if false %>
                <%= link_to 'Edit', edit_article_path(article) %>
                <% if current_user.admin? %>
                <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: "Are you sure?"} %>
                <% end %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @articles %>
    </div>